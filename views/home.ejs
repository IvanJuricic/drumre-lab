<!doctype html>
<html>
<head>
    <title>Movies</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
    <div class="page-header text-center">
        <h1><span class="fa"></span> My data</h1>
        <a href="/api/auth/logout" class="btn btn-default btn-sm">Logout</a>
        <a href="/api/user/" class="btn btn-default btn-sm">Profile</a>
        <a href="/api/root/" class="btn btn-default btn-sm">Home</a>
    </div>


<div class="container">

    <h1>Weather</h1>
    <% for(var i = 0; i < weatherData.length; i++) { %>
        <p class="well">
            <h1>Zagreb</h1>
        <span>
            <strong style="font-size: xx-large;"> <%= weatherData[i].temperature %> </strong> <br>
            <strong>Cloudcover</strong>:</strong> <%= weatherData[i].cloudcover %> </strong> <br>
        </span>
        </p>
        <br>
  <%  } %>

    <h2>Articles</h2>
    <% for(var i = 0; i < nytData.length; i++) { %>
        <p class="well">
            
        <span>
            <strong style="font-size: xx-large;"> <%= nytData[i].title %> </strong> <br>
            <strong>Abstract</strong>:</strong> <%= nytData[i].abstract %> </strong> <br>
        </span>
        </p>
        <br>
  <%  } %>

    
    
</div>
</body>
</html>